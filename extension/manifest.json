{
  "manifest_version": 3,
  "name": "JobStalker AI Job Search Companion",
  "version": "1.0.5",
  "description": "Save job postings from LinkedIn and auto-fill application forms on Greenhouse, Lever, and more.",
  
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "scripting",
    "sidePanel",
    "tabs"
  ],
  
  "host_permissions": [
    "<all_urls>",
    "http://localhost:3000/*",
    "http://localhost:5173/*",
    "http://localhost:8000/*",
    "https://*.jobstalker-ai.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  
  "action": {
    "default_title": "JobStalker AI",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://*.greenhouse.io/*",
        "*://*.lever.co/*",
        "*://*.myworkdayjobs.com/*",
        "*://*.workday.com/*",
        "*://*.smartrecruiters.com/*"
      ],
      "js": ["formAutofill.js"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["auth.html", "auth.js"],
      "matches": ["<all_urls>"]
    }
  ]
}